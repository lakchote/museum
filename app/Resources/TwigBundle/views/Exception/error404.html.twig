{% extends 'base.html.twig' %}
{% set _locale = app.session.get('_locale') %}

{% block title %}
    {{ 'header.title'|trans({}, '404', _locale) }}
{% endblock %}

{% block content %}
    <section class="row">
    <div class="col-md-12">
    <div class="row jumbotron">
       <h1><span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span> {{ 'content.title'|trans({}, '404', _locale) }}</h1>
    </div>
        <div class="well">
            <p>{{ 'content.info_message'|trans({}, '404', _locale) }}</p>
            <a href="{{ path('app_homepage_locale') }}">{{ 'content.link_title'|trans({}, '404', _locale) }}</a>
        </div>
    </div>
    </section>
{% endblock %}