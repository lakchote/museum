{% set _locale = app.session.get('_locale') %}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=Edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <!-- Coloration de la barre de navigation sur mobile -->
    <meta name="theme-color" content="#2b3e50"/>
    <title>{% block title %}{{ 'homepage.title'|trans({}, 'base', _locale) }}{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('vendor/bootstrap/bootstrap.min.css') }}">
        <link rel="icon" type="image/x-icon" href="{{ asset('louvre.ico') }}"/>
        <link rel="stylesheet" href="{{ asset('css/main.css') }}">
        <link rel="stylesheet" href="{{ asset('css/mobile.css') }}">
        <link rel="application/x-font-ttf" href="{{ asset('fonts/glyphicons-halflings-regular.ttf') }}">
        <link rel="application/x-font-ttf" href="{{ asset('fonts/glyphicons-halflings-regular.woff') }}">
        <link rel="application/x-font-ttf" href="{{ asset('fonts/glyphicons-halflings-regular.woff2') }}">
    {% endblock %}
    {% block IECompatibility %}
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    {% endblock %}
</head>
<body>
<div id="fb-root"></div>
<div class="container wrapper-page">
    {% block header %}
        <header>
            <section class="row row-offcanvas row-offcanvas-left">
                <p class="pull-left visible-xs">
                    <button type="button" id="btnTextXS" class="btn btn-primary btn-md" data-toggle="offcanvas"><span class="sr-only">Toggle Navigation</span>Menu</button>
                </p>
                <div class="navbar-header">
                    <a href="http://www.louvre.fr"><img src="{{ asset('img/logo.png') }}" id="image-logo" alt="MusÃ©e du Louvre" /></a>
                    <div class="col-md-12 pull-right">
                        {% if _locale == 'fr' %}
                        <a href="{{ path('app_user_setLocale', {'_locale' : 'en'}) }}"><img src="{{ asset('img/GB.png') }}"/></a>
                        {% else %}
                        <a href="{{ path('app_user_setLocale', {'_locale' : 'fr'}) }}"><img src="{{ asset('img/FR.png') }}"/></a>
                        {% endif %}
                    </div>
                </div>
                <nav class="navbar navbar-default col-md-12 col-sm-12 sidebar-offcanvas">
                    <ul id="listMenu" class="nav navbar-nav">
                        <li class="active"><a href="#">{{ 'homepage.menu.home'|trans({}, 'base', _locale) }}</a></li>
                        <li><a href="#horairesInfos">{{ 'homepage.menu.hours'|trans({}, 'base', _locale) }}</a></li>
                        <li><a href="#tarifsInfos">{{ 'homepage.menu.prices'|trans({}, 'base', _locale) }}</a></li>
                    </ul>
                </nav>
            </section>
            <section class="row">
                <div class="col-md-12 image-header">
                </div>
            </section>
        </header>
    {% endblock %}
    {% block content %}{% endblock %}
    {% block footer %}
        <footer class="row">
            <div class="col-md-12 col-xs-12  payments">
                <div class="row">
                    <p style="color:#000;"><strong>{{ 'homepage.footer.payment_info'|trans({}, 'base', _locale) }}</strong>
                        <img src="{{ asset('img/mastercard.gif') }}" alt="Mastercard" class="payment-method"/>
                        <img src="{{ asset('img/visa.gif') }}" alt="Visa" class="payment-method"/>
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 col-sm-6">
                    <p class="small">
                        <a href="mailto:billetterie@louvre.fr" id="footer-contact">{{ 'homepage.footer.links.contact'|trans({}, 'base', _locale) }}</a> -
                        <a href="#"> {{ 'homepage.footer.links.cgv'|trans({}, 'base', _locale) }}</a>
                    </p>
                </div>
                <div class="col-md-4 text-center hidden-xs hidden-sm">
                    <div class="fb-share-button" data-href="http://www.ticketlouvre.fr" data-layout="button"
                         data-mobile-iframe="true">
                        <a class="fb-xfbml-parse-ignore" target="_blank"
                           href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Fwww.ticketlouvre.fr%2F&amp;src=sdkpreparse"></a>
                    </div>
                    <a class="twitter-share-button" href="https://twitter.com/intent/tweet">Tweet</a>
                </div>
                <div class="visible-xs visible-sm col-sm-2 text-center" style="margin-top:5px; position:relative; left:-8%;">
                    <div class="fb-share-button" data-href="http://www.ticketlouvre.fr" data-layout="button"
                         data-mobile-iframe="true">
                        <a class="fb-xfbml-parse-ignore" target="_blank"
                           href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Fwww.ticketlouvre.fr%2F&amp;src=sdkpreparse"></a>
                    </div>
                    <a class="twitter-share-button" href="https://twitter.com/intent/tweet">Tweet</a>

                </div>
                <div class="col-md-4">
                    <span class="small pull-right hidden-xs" id="copyright">{{ 'homepage.footer.copyright'|trans({}, 'base', _locale) }}</span>
                </div>
                <div class="col-md-12 text-center">
                    <p class="small visible-xs" style="position:relative; left:-2%;">
                        <span class="glyphicon glyphicon-earphone" aria-hidden="true"></span> {{ 'homepage.footer.links.phone_title'|trans({}, 'base', _locale) }} {{ 'homepage.footer.links.phone'|trans({}, 'base', _locale)}}
                    </p>
                    <p class="small pull-right visible-sm">
                        <span class="glyphicon glyphicon-earphone" aria-hidden="true"></span> {{ 'homepage.footer.links.phone_title'|trans({}, 'base', _locale) }} {{ 'homepage.footer.links.phone'|trans({}, 'base', _locale)}}
                    </p>
                    <span class="small visible-xs" id="copyright">{{ 'homepage.footer.copyright'|trans({}, 'base', _locale) }}&nbsp;</span>
                </div>
            </div>
        </footer>
    {% endblock %}
</div>
{% block javascripts %}
    <script src="{{ asset('vendor/jQuery/jquery-3.1.1.min.js') }}"></script>
    <script src="{{ asset('js/main.js') }}"></script>
    <script src=" {{ asset('js/form.js') }}"></script>
{% endblock %}
</body>
<footer>

</footer>
</html>
