{% extends 'base.html.twig' %}

{% block title %}
    Récapitulatif de votre commande
{% endblock %}

{% block content %}
    <section class="row">
        <div class="col-md-12">
            <div class="row jumbotron">
                <h1>Récapitulatif de la commande</h1>
            </div>
            <div class="well">
                <h2>Informations liées à la commande</h2>
                <p>Date de réservation : {{ commande.dateVisite|date('Y-m-d') }} </p>
                <p>Type de billets : {{ commande.typeBillet }}</p>
                <p class="">Nombre de billets : {{ commande.billets.count }}</p>
                <p>Votre email : {{ commande.emailVisiteur }}</p>
                <p class="info"><em>Le prix de chaque billet est calculé automatiquement en fonction de la date de
                        naissance.</em></p>
            </div>
            {% for billet in commande.billets %}
                <p class="label label-default">Billet n° {{ loop.index }}</p>
                <div class="well">
                    <p><strong>Nom :</strong> {{ billet.nom }}</p>
                    <p><strong>Prénom</strong> : {{ billet.nom }}</p>
                    <p><strong>Date de naissance : </strong>{{ billet.dateNaissance|date('Y-m-d') }}</p>
                    <p><strong>Pays</strong> : {{ billet.pays|countryName }}</p>
                    <p><strong>Tarif</strong> : {{ billet.tarif.nom }}</p>
                    <p class="badge badge-important">Prix : {{ billet.tarif.prix }} €</p>
                </div>
            {% endfor %}
        </div>
        <div class="col-md-12 bottom-links">
            <span class="">Prix total : <strong>{{ totalPrice }} € </strong></span><br/><br/>
                <a href="{{ path('app_billets', {'id' : commande.id}) }}" class="btn btn-default"><span
                            class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Modifier billets</a>
                <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-shopping-cart"
                                                                    aria-hidden="true"></span> Commander
                </button>
        </div>
    </section>
{% endblock %}